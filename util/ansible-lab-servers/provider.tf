# ============================================
# Terraform Configuration
# ============================================
# Provider configuration for Google Cloud Platform
# Used to provision VMs for Ansible course lab environment

terraform {
  required_version = ">= 1.0"

  required_providers {
    google = {
      source  = "hashicorp/google"
      version = "~> 5.0"
    }
  }
}

provider "google" {
  project = var.project_id
  region  = var.region
}
